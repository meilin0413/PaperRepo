\begin{definition}
Two NLFSRs are $equivalent$ if the sets of their output sequences are the same, and two equivalent NLFSRs are called \textit{absolutely equivalent} if their state transition graphs are isomorphic.
\end{definition}
In the following, only the absolutely equivalence of NLFSR will be considered. In order to avoid ambiguity, an NLFSR is a arbitrary type of NLFSR without special declarations.

\section{Unified synchronization criterion}\label{sec2.3}
In this section, some interesting properties of uniform NLFSR are firstly obtained. Then, two algorithms are provided to achieve the transformation between Galois NLFSR and Fibonacci NLFSR.

\begin{property}\label{p1}\cite{zhiqiang2013transformation}
Given an $n$-bit uniform NLFSR $N_1$. If the nonlinear recurrence of order $n$ describing the output sequence of $N_1$ is
\begin{equation}\label{n-r}
x_{0}(t+n)=f(x_0(t),x_0(t+1),...,x_0(t+n-1)).
\end{equation}
One can replace $x_0(t+i)$ with $x_i(t)$, $(0\leq i\leq n-1)$ in (\ref{n-r}), then we can obtain
 \begin{eqnarray*}
 \left\{ \begin{aligned}
&x_0(t+1)=x_1(t),\\
&\vdots \\
&x_{n-2}(t+1)=x_{n-1}(t),\\
&x_{n-1}(t+1)=f(x_0(t),x_1(t),...,x_{n-1}(t)),
\end{aligned} \right.
\end{eqnarray*}
which is a Fibonacci NLFSR.
\end{property}

\begin{lemma}\label{nonlinear recurrence1}\cite{Dubrova2009A}
 If two $n$-bit NLFSRs have same nonlinear recurrence of order $n$, then these two $n$-bit NLFSRs are equivalent to each other.
\end{lemma}

\begin{lemma}\label{initial state}\cite{Dubrova2010Finding}
 If two $n$-bit NLFSRs (NLFSR $N_1$ and NLFSR $N_2$) have same nonlinear recurrence of order $n$, then there exists a bijection $\Phi$ between the initial states of NLFSR $N_1$ and NLFSR $N_2$, such that the initial states $\delta^i_{2^n}$ in $N_1$ and $\Phi(\delta^i_{2^n})$ in $N_2$ have same output sequence.
\end{lemma}

\begin{theorem}\label{nonlinear recurrence}
If two $n$-bit uniform NLFSRs (NLFSR $N_1$ and NLFSR $N_2$) have same nonlinear recurrence of order $n$, then these two $n$-bit NLFSRs are absolutely equivalent.
\end{theorem}
\begin{proof}
From Lemma \ref{nonlinear recurrence1}, we can know that these two $n$-bit NLFSRs are equivalent. Hence, in the following, we only need to prove that the state transition graphs of these two NLFSRs are isomorphic.

From Lemma \ref{initial state}, one can conclude that there is a bijection $\Phi$ between these initial states of two NLFSRs, such that the initial states $\delta^i_{2^n}$ in NLFSR $N_1$ and $\Phi(\delta^i_{2^n})$ in NLFSR $N_2$ have the same output sequence. Now, we only need to prove that
\begin{equation*}
\Phi(L_1\delta^i_{2^n})=L_2\Phi(\delta^i_{2^n}),
\end{equation*}
where $L_1$ and $L_2$ are structure matrices of NLFSR $N_1$ and NLFSR $N_2$ respectively.

Let $l_i=i_1,i_2,i_3,...$ denote the output sequence of initial state $\delta^i_{2^n}$.
\begin{itemize}
  \item For NLFSR $N_1$, if $L_1\delta^i_{2^n}=\delta^j_{2^n}$, then $l_j$ is the sub-sequence of $l_i$ and $i_2=j_1,i_3=j_2,...$. If  $\Phi(\delta^i_{2^n})=\delta^p_{2^n}$, then $\delta^p_{2^n}$ is initial state of NLFSR $N_2$, then one can obtain that $l_i$ is equal to $l_p$ (i.e. $i_1=p_1,i_2=p_2,...$).
  \item  For NLFSR $N_2$, if $L_2\Phi(\delta^i_{2^n})=L_2\delta^p_{2^n}=\delta^q_{2^n}$, then $l_q$ is the sub-sequence of $l_p$, and $p_2=q_1,p_3=q_2,...$.
  \item Hence, we can conclude that output sequence $l_j$ is equal to $l_q$, which means that $\Phi\delta^j_{2^n}=\delta^q_{2^n}$ (i.e. $\Phi(L_1\delta^i_{2^n})=L_2\Phi(\delta^i_{2^n})$). So the state transition graphs of NLFSR $N_1$ and NLFSR $N_2$ are isomorphic.
\end{itemize}

\end{proof}

From Property \ref{p1}, Lemma \ref{initial state} and Theorem \ref{nonlinear recurrence}, we can derive the following Corollary.
\begin{corollary}\label{uniform-equivalent}
 A uniform Galois NLFSR can be transformed to an absolutely equivalent Fibonacci NLFSR.
\end{corollary}

%引用，关于分支点跟起始点的个数是一样的。
\begin{lemma}\label{m3}\cite{dawei2014novel}
 The number of branch states of a Fibonacci NLFSR is equal to the number of starting states.
\end{lemma}

From definition of uniform NLFSR and Corollary \ref{uniform-equivalent}, we can derive following properties of uniform NLFSR.

\begin{property}
The number of branch states of an uniform NLFSR is equal to the number of starting states.
\end{property}

\begin{property}
 Every state of an uniform NLFSR has at most two predecessors, and $|col(L_G)|\geq 2^{n-1}$.
\end{property}

\begin{proof}
If every state $\delta^i_{2^n}\in col(L_G)$ in uniform NLFSR has two predecessors, then there are $\delta^{i_1}_{2^n}$ and $\delta^{i_2}_{2^n}$, such that:
\begin{equation*}
L\delta^{i_1}_{2^n}=L\delta^{i_2}_{2^n}=\delta^i_{2^n}.
\end{equation*}
Then $col_{i_1}(L_G)$ and $col_{i_2}(L_G)$ are both equal to $\delta^i_{2^n}$. Hence, we have $|col(L_G)|\geq 2^{n-1}$.
\end{proof}

\begin{property}\label{GF}
 For an arbitrary uniform NLFSR $N_1$, there are at most two equilibrium states of NLFSR $N_1$. If the NLFSR $N_1$ has two equilibrium states $e_1,e_2$, then $e_1\in S_0$ and $e_2\in S_1$.
\end{property}
\begin{proof}
From Theorem \ref{nonlinear recurrence} and Corollary \ref{uniform-equivalent}, $N_1$ can be transformed to an absolutely equivalent Fibonacci NLFSR $N_2$. Hence the state transition graph $G_{N_1}\cong G_{N_2}$, and the set of output sequences of NLFSR $N_1$ and NLFSR $N_2$ are equal. Since every state of NLFSR $N_2$ has two predecessors at most, NLFSR $N_1$ must have the same property (i.e. for every state of NLFSR $N_1$ has at most two predecessors).

For NLFSR $N_2$, the equilibrium states can only be $000...$ or $111...$. The output sequences of initial states $000...$ and $111...$ are $000...$ and $111...$ respectively. Considering the fact that the output sequences of equilibrium states of two absolutely NLFSRs are equal, we can conclude that if NLFSR $N_1$ have two equilibrium states $e_1,e_2$, then $e_1\in S_0$ and $e_2\in S_1$.
\end{proof}

\begin{theorem}\label{m1}%只是必要条件
Given an $n$-bit NLFSR $N_1$ with its structure matrix being $L_1$. Then there exists another different $n$-bit Galois NLFSR $N_2$ with structure matrix being $L_2$, such that NLFSR $N_1$ and NLFSR $N_2$ are absolutely equivalent.
\end{theorem}
\begin{proof}
First, we need to construct a bijection $\Phi:\Delta_{2^n}\rightarrow \Delta_{2^n}$, which is a one-to-one mapping from states of NLFSR $N_1$ to that of NLFSR $N_2$.


The constructing method of the bijection $\Phi$ named $CM$ is given as follows:
\begin{itemize}
  \item \textbf{\textit{Initialization}}  Set $i:=0$, set $Re:=\Delta_{2^n}$, state transition graph of $N_2$ is $G_{N_2}:=(V,E),V=\emptyset , E=\emptyset$.
  \item \textbf{\textit{Recursive step}}  Set $i=i+1$, $\delta^i_{2^n}\sim (i_0,i_1,...i_{n-1}) $ of $N_1$.\\
if $i_0=0$, then one can set $(0,j_1,...j_{n-1})\sim \delta^j_{2^n}\in Re$.\\
else one can set $(1,j_1,...j_{n-1})\sim \delta^j_{2^n}\in Re$.\\
Do $V=V\cup\delta^j_{2^n}$, and set $\Phi(\delta^i_{2^n})=\delta^j_{2^n}$, $Re=Re \setminus \delta^j_{2^n}$.\\
$E=\{\Phi(u)\Phi(v)|u,v\in V(G_{N_1}),uv=e\in E(G_{N_1})\}$, and the matrix $L_2$ satisfies the following property:\\
$\{col_i(L_2)=\delta^j_{2^n}|u=\delta^i_{2^n}\sim(i_0,i_1,...,i_{n-1}),v=\delta^j_{2^n}\sim(j_0,j_1,...,j_{n-1}),\Phi^{-1}(u)\Phi^{-1}(v)\in E(G_{N_1})\}.$
\end{itemize}

From the process of $CM$, we can easily conclude that NLFSR $N_2$ and NLFSR $N_1$ are absolutely equivalent.
\end{proof}

From the process of constructing method $CM$, one can also derive the following result.
\begin{corollary}\label{m2}
If an arbitrary type of NLFSR $N_1$ is equivalent to a Galois NLFSR $N_2$ which is constructed by $CM$, then the states in sets $S_0$ of NLFSR $N_1$ and NLFSR $N_2$ are one-to-one mapping, and further the states in sets $S_1$ of NLFSR $N_1$ and NLFSR $N_2$ are also one-to-one mapping.
\end{corollary}


\begin{theorem}\label{transform-from-G-F}
 Given an arbitrary $n$-bit uniform Galois NLFSR $GN$ with its state transition matrix being $L_G$, there exist a matrix $L_F\in \mathcal{F}_{2^n\times 2^n}$ and a permutation matrix $M_{\Phi}=[M_{\Phi_1},M_{\Phi_2}]\in \mathcal{L}_{2^n\times 2^n}$, $M_{\Phi_1}\in \mathcal{L}_{2^n\times 2^{n-1}}$, $M_{\Phi_2}\in \mathcal{L}_{2^n\times 2^{n-1}}$, $col(M_{\Phi_1})\subseteq\{\delta^1_{2^n},\delta^2_{2^n},...,\delta^{2^{n-1}}_{2^n}\}$, $col(M_{\Phi_2})\subseteq\{\delta^{2^{n-1}+1}_{2^n},\delta^{2^{n-1}+2}_{2^n},...,\delta^{2^{n}}_{2^n}\})$ such that
\begin{equation}
L_G=M^{-1}_{\Phi}L_FM_{\Phi}.
\end{equation}
\end{theorem}
\begin{proof}
From Theorem \ref{uniform-equivalent} and Corollary \ref{uniform-equivalent}, the NLFSR $GN$ is absolutely equivalent to a Fibonacci NLFSR $FN$ with structure matrix being $L_F$. Then there exists a bijection $\Phi$ between the initial states of NLFSR $GN$ and NLFSR $FN$. Hence, for any state $\delta^i_{2^n}$ of NLFSR $GN$, we have
\begin{equation}
M_{\Phi}L_G\delta^i_{2^n}=L_FM_{\Phi}\delta^i_{2^n},
\end{equation}
where $M_{\Phi}$ is the structure matrix of bijection $\Phi$, and $M_{\Phi}$ is a permutation matrix. To ensure that the output sequences of $\delta^i_{2^n}$ and $M_{\Phi}\delta^i_{2^n}$ are equal, we need the implementation of that $\delta^i_{2^n}\sim (0,i_1,...i_{n-1})$,
 which implies that $M_{\Phi}\delta^i_{2^n}=\delta^j_{2^n}\sim (0,i_1,...i_{n-1})$. Hence $col(M_{\Phi_1})\subseteq\{\delta^1_{2^n},\delta^2_{2^n},...,\delta^{2^{n-1}}_{2^n}\}$, $col(M_{\Phi_2})\subseteq\{\delta^{2^{n-1}+1}_{2^n},\delta^{2^{n-1}+2}_{2^n},...,\delta^{2^{n}}_{2^n}\})$.

On the contrary, if $M_{\Phi}L_G\delta^i_{2^n}\neq L_FM_{\Phi}\delta^i_{2^n}$, we know that the output sequences of initial state $M_{\Phi}L_G\delta^i_{2^n}$ in NLFSR $GN$ and initial state $L_FM_{\Phi}\delta^i_{2^n}$ in NLFSR $FN$ are not equal, which contradicts with Theorem \ref{nonlinear recurrence}. Hence, proof of Theorem \ref{transform-from-G-F} is completed.
\end{proof}
Following Theorem \ref{m1} and Theorem \ref{transform-from-G-F}, we can derive the following theorem to describe the relationship between structure matrices of Fibonacci NLFSR and Galois NLFSR.

\begin{theorem}\label{ftog}
An arbitrary Fibonacci NLFSR $FN$ can be transformed to an absolutely equivalent Galois NLFSR $GN$ by using $CM$, and the structure matrix $M_{\Psi}$ of bijection $\Psi$ between the initial states in NLFSR $FN$ and NLFSR $GN$ satisfies that $M_{\Psi}=[M_{\Psi_1},M_{\Psi_2}]$, $M_{\Psi_1}\in \mathcal{L}_{2^n\times 2^{n-1}}$, $M_{\Psi_2}\in \mathcal{L}_{2^n\times 2^{n-1}}$, $col(M_{\Psi_1})\subseteq\{\delta^1_{2^n},\delta^2_{2^n},...,\delta^{2^{n-1}}_{2^n}\}$, $col(M_{\Psi_2})\subseteq\{\delta^{2^{n-1}+1}_{2^n},\delta^{2^{n-1}+2}_{2^n},...,\delta^{2^{n}}_{2^n}\})$.
 The structure matrices $L_F$ of NLFSR $GN$ and $L_G$ of NLFSR $FN$ satisfy
 \begin{equation}
 L_F=M^{-1}_{\Psi}L_G M_{\Psi}.
 \end{equation}
\end{theorem}

In the following, we provide an algorithm to achieve the transformation from a uniform Galois NLFSR to an absolutely equivalent Fibonacci NLFSR. Suppose that the structure matrix of Galois NLFSR is $L_G=\delta_{2^n}[p_1~ p_2~ ...~ p_{2^n}]$. For any initial state $\delta^i_{2^n}$, it has an output sequence $l_i$. In this algorithm, the first $n$ bits of $l_i$ are written as $(y_1,y_2,...,y_n)\sim\delta^{j_i}_{2^n}$. Now we provide an algorithm to calculate the structure matrix $M_{\Phi}$ of transform function $\Phi$ and the structure matrix of NLFSR $N_2$. In following algorithm, at first, we judge whether the Galois NLFSR is a uniform Galois NLFSR. If the Galois NLFSR is a uniform Galois NLFSR, the Galois NLFSR can be transformed into an absolutely equivalent Fibonacci NLFSR. Otherwise the algorithm is ended.

\begin{algorithm}\label{algorithm1}
\caption{Calculation of matrix $L_F$.}
\begin{algorithmic}[1]
\STATE initial set $\Delta=\{1,2,...,2^n\}$
\FOR { $i=1$ to $2^n$}
\IF {$j_i\in \Delta$}
\STATE $\Phi(i)=j_i$
\STATE $col_i(M_{\Phi})=\delta^{j_i}_{2^n}$
\STATE $\Delta\backslash j_i$
\ELSE
\STATE the algorithm is ended.
\ENDIF
\ENDFOR
\STATE $M^{-1}_{\Phi}=M^{T}_{\Phi}$
\STATE $L_F=M_{\Phi}L_G M^{-1}_{\Phi}$
\end{algorithmic}
\end{algorithm}

\begin{remark}
According to Algorithm 1, one can obtain the structure matrix $M_{\Phi}$, and $M_{\Phi}=[M_{\Phi_1}~ M_{\Phi_2}]\in \emph{L}_{2^n\times 2^n}$, $M_{\Phi_1}\in \emph{L}_{2^{n}\times 2^{n-1}}$, $M_{\Phi_2}\in \emph{L}_{2^{n}\times 2^{n-1}}$, $col(M_{\Phi_1})\subseteq\{\delta^{1}_{2^n},\delta^{2}_{2^n},...,\delta^{2^{n-1}}_{2^n}\}$, $col(M_{\Phi_2})\subseteq\{\delta^{2^{n-1}+1}_{2^n},\delta^{2^{n-1}+2}_{2^n},...,\delta^{2^{n}}_{2^n}\}$.
\end{remark}

The transformation from a Fibonacci NLFSR to an absolutely equivalent Galois NLFSR can be achieved according to the following Algorithm 2. In the transformation from a Fibonacci NLFSR to an equivalent Galois NLFSR, one only need to construct a bijection $\Psi$ from Galois NLFSR to Fibonacci NLFSR. The structure matrix of bijection $\Psi$ is denoted by $M_{\Psi}$. For every initial state $\delta^i_{2^n}$ in Fibonacci NLFSR, if $\delta^i_{2^n}\in S_0$ $(\delta^i_{2^n}\in S_1)$, then we can choose an $\delta^{j_i}_{2^n}\in S_0$ $(\delta^{j_i}_{2^n}\in S_1)$, such that $\Psi(\delta^i_{2^n})=\delta^{j_i}_{2^n}\in S_0$ $(\Psi(\delta^i_{2^n})=\delta^{j_i}_{2^n}\in S_1)$. The algorithm is presented as follows.

\begin{algorithm}\label{algorithm2}
\caption{Calculation of matrix $L_F$.}
\begin{algorithmic}[2]
\STATE $\Omega_1=\{1,2,...,2^{n-1}\}$,$\Omega_2=\{2^{n-1}+1,2^{n-1}+2,...,2^{n}\}$
\FOR { $i=1$ to $2^{n-1}$}
\STATE $\Psi(i)=j_i\in\Omega_1$
\STATE $\Omega_1=\Omega_1\setminus j_i$
\STATE $col_i(M_{\Psi})=\delta^{j_i}_{2^n}$
\ENDFOR
\FOR { $i=2^{n-1}$ to $2^{n}$}
\STATE $\Psi(i)=j_i\in\Omega_2$
\STATE $\Omega_2=\Omega_2\setminus j_i$
\STATE $col_i(M_{\Psi})=\delta^{j_i}_{2^n}$
\ENDFOR
\STATE $M^{-1}_{\Psi}=M^{T}_{\Psi}$
\STATE $L_G=M_{\Psi}L_F M^{-1}_{\Psi}$
\end{algorithmic}
\end{algorithm}

